<html>




<head>


   <script>


       function getRandomColor() {


           var red = parseInt(Math.random() * 255);


           var green = parseInt(Math.random() * 255);


           var blue = parseInt(Math.random() * 255);


           var color = "rgb(" + red + "," + green + "," + blue + ")";


           return color;


       }


       function changeColor(){


           divTwo.style.backgroundColor = getRandomColor();


       }


      


       var dx = []; //speed in x direction


       var dy = []; //speed in y direction


       var diameter = []; 


       var x = [];


       var y = [];


       var colors = [];


       var numCircles = 50;


       var canvas;


       var ctx;


	var size = 800; //canvas side length


	var timerX


	var speedUp = false;


	var slowDown = false;


     


       function loadCanvas() {


           canvas = document.getElementById("myCanvas");


	    canvas.width = size;


	    canvas.height = size;


           ctx = canvas.getContext("2d");	  


       }


      


       function startTimer() {	 


          initializeArrays();


	   clearInterval(timerX);


          timerX = window.setInterval("tick()", 30)


      }







      function initializeArrays() {


          for (var i = 0; i < numCircles; i++) {


              dx[i] = parseInt(Math.random() * 5) - 3


              dy[i] = parseInt(Math.random() * 5) - 3


              diameter[i] = parseInt(Math.random() * 10) + 10


              x[i] = parseInt(Math.random() * (size-2*diameter[i])) + diameter[i];


              y[i] = parseInt(Math.random() * (size-2*diameter[i])) + diameter[i];


              colors[i] = getRandomColor();


          }


      }







function display(){


           alert("This is a moving background I learned to make in IT class last year, you can speed up and slow down the circles.");


       }







      function tick() {


          ctx.clearRect(0, 0, size, size);


          for (var i = 0; i < numCircles; i++) {


              x[i] = x[i] + dx[i]


              y[i] = y[i] + dy[i]


              if(diameter[i] <= 15 && diameter[i] > 7){


                  diameter[i] -= .01;


              }


              if(diameter[i] > 15 && diameter[i] < 27){


                  diameter[i] += .01;


              }


              if(speedUp == true){


                  if(dx[i] >= 0){


                      dx[i] += .01;


                  }


                  if(dy[i] >= 0){


                      dy[i] += .01;


                  }


                  if(dx[i] <= 0){


                      dx[i] -= .01;


                  }


                  if(dy[i] <= 0){


                      dy[i] -= .01;


                  }


              }


              if(slowDown == true){


                  if(dx[i] >= 0){


                      dx[i] -= .01;


                  }


                  if(dy[i] >= 0){


                      dy[i] -= .01;


                  }


                  if(dx[i] <= 0){


                      dx[i] += .01;


                  }


                  if(dy[i] <= 0){


                      dy[i] += .01;


                  }


              }


            //  if (x[i] <= diameter[i] || x[i] >= size - diameter[i]) dx[i] = -dx[i], colors[i] = getRandomColor();


            //  if (y[i] <= diameter[i]  || y[i] >= size - diameter[i]) dy[i] = -dy[i], colors[i] = getRandomColor();


              if (x[i] <= diameter[i] || x[i] >= size - diameter[i]) x[i] = canvas.width-x[i];


              if (y[i] <= diameter[i]  || y[i] >= size - diameter[i]) y[i] = canvas.width-y[i];


              ctx.fillStyle = colors[i]


              ctx.beginPath();


              ctx.arc(x[i], y[i], diameter[i], 0, 2 * Math.PI, true);


              ctx.fill();


          }


      }







      function getRandomColor() {


          var red = parseInt(255 * Math.random());


          var green = parseInt(255 * Math.random());


          var blue = parseInt(255 * Math.random());


          var color = "rgb(" + red + "," + green + "," + blue + ")"


          return color


      }


   </script>


