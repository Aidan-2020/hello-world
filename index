<input type = "button" value = "Speed up on" onclick = "speedUp = true" />


<input type = "button" value = "Speed up off" onclick = "speedUp = false" />


<input type = "button" value = "Slow down on" onclick = "slowDown = true" />


<input type = "button" value = "Slow down off" onclick = "slowDown = false" />


 


